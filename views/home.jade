extends layout

block meta
  each meta in metas
    meta(name=meta.name, content=meta.content)


block head
  link(rel='stylesheet', href='/stylesheets/index.css')

block content
  h1= title
  a(href='/rss.xml')
    img#rss(src='/img/rss.png', alt='rss')

  each post in posts
    h2
      a(href='/' + post.id)= post.title
